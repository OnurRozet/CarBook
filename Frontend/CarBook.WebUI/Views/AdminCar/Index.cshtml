@model List<CarBook.Application.Features.CQRS.Results.CarResults.GetCarWithBrandQueryResult>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;

}

<div class="page-content">
	<div class="container-fluid">

		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Araba Listesi</h4>
						<p class="card-subtitle mb-4">
							Arabalar ile ilgili ekleme,silme,güncelleme  ve listeleme gibi işlemleri bu sayfa üzerinden gerçekleştirebilirsiniz
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Araç Adı</th>
										<th>Araç Modeli</th>
										<th>Km</th>
										<th>Koltuk Sayısı</th>
										<th>Yakıt Tipi</th>
										<th>Sil</th>
										<th>Güncelle</th>
										<th>Detaylar</th>
										<th>Sitede Gör</th>
										<th>Fiyat Bilgileri</th>
								
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<th scope="row">@count</th>
											<td>@item.BrandName</td>
											<td>@item.Model</td>
											<td>@item.Km</td>
											<td>@item.Seat</td>
											<td>@item.Fuel</td>
											<td><a href="/AdminCar/RemoveCar/@item.Id" class="btn btn-outline-danger">Sil</a></td>
											<td><a href="/AdminCar/UpdateCar/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
											<td><a href="/Carlist/CarDetail/@item.Id" class="btn btn-outline-dark">Detaylar</a></td>
											<td><a href="/Carlist/CarDetail/@item.Id" class="btn btn-outline-dark">Sitede Gör</a></td>
											<td><a href="/Carlist/CarDetail/@item.Id" class="btn btn-outline-secondary">Fiyat Bilgileri</a></td>
										</tr>
									}
								</tbody>
							</table>
							<td><a href="/AdminCar/CreateCar/" class="btn btn-outline-primary">Yeni Araç Girişi</a></td>

						</div>

					</div>
					<!-- end card-body-->
				</div>
				<!-- end card -->

			</div>
			<!-- end col -->

		</div>
		<!-- end row -->

	</div> <!-- container-fluid -->
</div>

