@model CarBook.Application.Features.Mediator.Results.BlogResults.GetBlogQueryResult
<div class="col-md-8 ftco-animate">
    <h2 class="mb-3">@Model.Title</h2>
    <p>@Model.Description</p>
    <p>
        <img src="@Model.CoverImageUrl" alt="" class="img-fluid">
    </p>
    @await Component.InvokeAsync("_BlogDetailTagCloudByBlogComponentPartial", new { id = ViewBag.blogId })
    @await Component.InvokeAsync("_BlogDetailAuthorAboutComponentPartial", new { id = ViewBag.blogId })
 
    <div class="pt-5 mt-5">
        <h3 class="mb-5">6 Yorum</h3>
        @await Component.InvokeAsync("_CommentListComponentPartial")
        <!-- END comment-list -->
        @await Component.InvokeAsync("_AddCommentComponentPartial")
    </div>

</div>
